@model CS4790A3.Models.Comment


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" >
    <div class="form-horizontal">
        <h4>Comment for Site: @ViewData["SiteName"] </h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="cmtComment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="cmtComment" class="form-control" />
                <span asp-validation-for="cmtComment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            
            <div class="col-md-10">
                <input type="hidden" asp-for="cmtDate"  class="form-control" />

            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select> 
                <input type="hidden" id="site" value="@ViewData["SiteName"]" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<script>document.querySelector("#cmtDate").value = new Date().toISOString().slice(0, 19).replace('T', ' ');</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
